@model TaskMS.Models.TeamMember

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TeamMember</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberRole)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberRole)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Delete" asp-route-id="@Model.MemberId" class="btn btn-danger">Delete</a>
    <a asp-action="Edit" asp-route-id="@Model?.MemberId" class="btn btn-light">Edit</a>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

<table class="table">
<thead>
    <tr>
        <th>
            Task Title
        </th>
        <th>
            Task Status
        </th>
        <th>
            Task Priority
        </th>
        <th>
            Task DeadLine
        </th>
        <th>
            Project Name
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model.tasks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskPriority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.projectt.ProjectName)
            </td>
        </tr>
    }
</tbody>
</table>
